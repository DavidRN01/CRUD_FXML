<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>


<BorderPane prefHeight="585.0" prefWidth="791.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.crudinterfaz.PedidosController">
   <center>
      <TableView fx:id="tabla" onMouseClicked="#seleccionElemento" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
            <TableColumn fx:id="colNombre" prefWidth="75.0" text="Nombre" />
            <TableColumn fx:id="colPrecio" prefWidth="75.0" text="Precio" />
          <TableColumn fx:id="colFecha" prefWidth="75.0" text="Fecha" />
          <TableColumn fx:id="colEstado" prefWidth="75.0" text="Estado" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <FlowPane alignment="CENTER" hgap="20.0" prefHeight="48.0" prefWidth="791.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCarta" mnemonicParsing="false" onAction="#mostrarCarta" text="Ver carta" />
            <Button fx:id="btnCrearPedido" mnemonicParsing="false" onAction="#crearPedido" text="Crear pedido" />
            <Button fx:id="btnListarHoy" mnemonicParsing="false" onAction="#listarHoy" text="Ver pedidos de hoy" />
            <Button fx:id="btnListarTodo" mnemonicParsing="false" onAction="#listarTodo" text="Ver todos los pedidos" />
            <Button fx:id="btnRecogido" mnemonicParsing="false" onAction="#marcarRecogido" text="Marcar recogido" />
            <Button fx:id="btnBorrar" mnemonicParsing="false" onAction="#borrarPedido" text="Eliminar pedido" />
         </children>
      </FlowPane>
   </bottom>
</BorderPane>
